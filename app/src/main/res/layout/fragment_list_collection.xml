<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/listCollectionCoordinator"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView.promotion_name"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_marginHorizontal="100px"
        android:layout_marginVertical="250px"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:text="Jouw Boodschappenlijstjes"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/ShoppingListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="500px"
        android:layout_marginBottom="400px"></ListView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="20dp"
        android:tint="@android:color/white"
        android:src="@android:drawable/ic_input_add"
        app:layout_anchorGravity="bottom|right|end" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
